import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Stock stock = new Stock();
        boolean exit = false;

        while (!exit) {
            System.out.println("Menu:");
            System.out.println("1. Add Item");
            System.out.println("2. Remove Item");
            System.out.println("3. Add Stock");
            System.out.println("4. Display All Items");
            System.out.println("5. Exit");
            System.out.print("Choose an option: ");
            int choice = scanner.nextInt();
            scanner.nextLine();

            switch (choice) {
                case 1:
                    System.out.print("Enter item name: ");
                    String nameToAdd = scanner.nextLine();
                    System.out.print("Enter item price: ");
                    float priceToAdd = scanner.nextFloat();
                    System.out.print("Enter initial quantity: ");
                    int quantityToAdd = scanner.nextInt();
                    stock.addItem(nameToAdd, priceToAdd, quantityToAdd);
                    break;

                case 2:
                    System.out.print("Enter item name to remove: ");
                    String nameToRemove = scanner.nextLine();
                    stock.removeItem(nameToRemove);
                    break;

                case 3:
                    System.out.print("Enter item name to add stock: ");
                    String addstockitem = scanner.nextLine();
                    System.out.print("Enter quantity to add: ");
                    int quantityToAddStock = scanner.nextInt();
                    stock.addStock(addstockitem, quantityToAddStock);
                    break;

                case 4:
                    System.out.print("Enter item name to display details: ");
                    String displayItem = scanner.nextLine();
                    stock.displayItemDetails(displayItem);
                    break;

                case 5:
                    exit = true;
                    break;


            }
        }

        scanner.close();
    }
}
